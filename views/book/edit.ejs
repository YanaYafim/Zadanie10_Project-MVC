<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Editing: "<%= book.title %>"</h1>
  </div>
  
  <div class="col py-3">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Homepage</a></li>
            <li class="breadcrumb-item active">"<%= book.title %>"</li>
          </ol>
        </nav>
      </div>
      <div class="col text-end fw-lighter">
        <b>Last Updated: <%= new Date(book.updatedAt).toUTCString()  %></b>
      </div>
    </div>
  </div>
  
  
  <form action="/edit/<%= book._id %>?_method=PUT" method="POST">
  
    <div class="row form-group mb-4">
      <div class="col">
        <label for="title" class="fw-bold">Title<span class="text-danger">*</span></label>
        <input type="text" class="form-control" id="title" name="title" value="<%= book.title %>" placeholder="e.g. Example" required>
      </div>
  
      <div class="col">
        <label for="author" class="fw-bold">Author<span class="text-danger">*</span></label>
        <input type="text" class="form-control" id="author" name="author" value="<%= book.author %>" placeholder="e.g. John First" required>
      </div>
    </div>
  
    <div class="row form-group mb-4">
      <div class="col">
        <label for="genre" class="fw-bold">Genre</label>
        <input type="text" class="form-control" id="genre" name="genre" value="<%= book.genre %>" placeholder="e.g. Novel">
      </div>
  
      <div class="col">
        <label for="year" class="fw-bold">Year</label>
        <input type="text" class="form-control" id="year" name="year" value="<%= book.year %>" placeholder="e.g. 1999">
      </div>
    </div>
  
    <div class="form-group mb-4">
        <label for="notes"class="fw-bold">Book notes</label>
        <textarea class="form-control" name="notes" id="notes" cols="30" rows="12" placeholder="Book Notes"><%= book.notes %></textarea>
    </div>
  
    <div class="mb-4 p-0">
      <label class="fw-bold text-decoration-underline">Is read?</label>
      <input name="isRead" type="checkbox" value="true" id="isRead" <% if (book.isRead) { %>checked<% } %>>
    </div>

    <div class="form-group mb-4">
      <button type="submit" class="btn btn-primary">Update Book</button>
  
      <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete Book</button>
  
    </div>
  
  </form>
  
  
  
  <div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-body">
          <p>
            This will remove the record of <b class="fw-bold"><%= book.title %></b><br/>
            Are you sure?
          </p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <form action="/edit/<%= book._id %>?_method=DELETE" method="POST" class="position-relative">
            <button type="submit" class="btn btn-primary">Yes, remove book</button>
          </form>
        </div>
      </div>
    </div>
  </div>